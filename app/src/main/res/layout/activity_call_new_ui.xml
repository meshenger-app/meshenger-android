<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/call_screen_zoom"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="53dp"
        android:layout_marginStart="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_minimize_2_1"/>

    <ImageView
        android:id="@+id/call_screen_camera"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="45dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:layout_constraintStart_toEndOf="@+id/call_screen_zoom"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/call_screen_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/call_screen_camera"
        android:layout_marginStart="35dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/call_button_ellipse"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/call_screen_mic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="35dp"
        android:src="@drawable/ic_baseline_mic_24"

        app:layout_constraintStart_toEndOf="@+id/call_screen_end"/>


</androidx.constraintlayout.widget.ConstraintLayout>