<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_20"
    android:background="@drawable/curved_background" >

    <TextView

        android:id="@+id/set_ice_server_textview"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/set_ice_servers_description"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/iceServersEditText"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_below="@id/set_ice_server_textview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_background"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        android:scrollHorizontally="true"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/AbortButton"
        android:text="@string/button_abort"
        android:layout_width="125dp"
        android:layout_height="@dimen/padding_50"
        android:layout_below="@id/iceServersEditText"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_20"
        android:background="@drawable/skip_button_background"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textColor="?android:textColorPrimary"
        />

    <Button
        android:id="@+id/SaveButton"
        android:text="@string/button_save"

        android:layout_width="125dp"
        android:layout_height="@dimen/padding_50"
        android:layout_below="@id/iceServersEditText"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_toEndOf="@id/AbortButton"
        android:background="@drawable/next_button_background"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />

</RelativeLayout>
