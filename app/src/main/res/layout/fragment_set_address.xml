<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_20"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/curved_background"
        >

    <TextView
        android:id="@+id/set_address_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/setup_address_title"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/set_address_message_textview"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:text="@string/setup_address_message"
        android:layout_below="@id/set_address_title_textview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_5"/>

    <Button
        android:id="@+id/set_address_skip_button"
        android:layout_width="125dp"
        android:layout_height="@dimen/padding_50"
        android:layout_below="@id/set_address_message_textview"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_20"
        android:background="@drawable/skip_button_background"
        android:fontFamily="@font/lato_bold"
        android:text="@string/skip"
        android:textAllCaps="false"
        android:textColor="@color/black" />

        <Button
            android:id="@+id/set_address_okay_button"
            android:layout_width="125dp"
            android:layout_height="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_marginStart="15dp"
            android:background="@drawable/next_button_background"
            android:text="@string/ok"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/set_address_skip_button"

            android:layout_below="@id/set_address_message_textview"/>


    </RelativeLayout>
