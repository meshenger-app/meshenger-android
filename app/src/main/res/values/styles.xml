<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/MySpinner</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="primaryTextColor">@android:color/black</item>
        <item name="secondaryTextColor">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="backgroundCardColor">@android:color/background_light</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="primaryTextColor">@color/colorTextDarkPrimary</item>
        <item name="secondaryTextColor">@color/colorTextDarkSecondary</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="backgroundCardColor">@color/colorBackgroundDark</item>
    </style>

    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CurvedImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@null</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/selectedColor</item>
    </style>
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

    <style name="RadioButtonTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/selectedColor</item>
    </style>

    <style name="MySpinner" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:dividerHeight">2dp</item>
        <item name="android:divider">#7C7B7B</item>
    </style>
</resources>
