<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeBase" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/MySpinner</item>

        <!-- make the screen not overlap with the system bars -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.FireRed" parent="AppThemeBase">
        <item name="android:colorPrimary">#FFEC3E3E</item>
        <item name="android:colorPrimaryDark">#B71C1C</item>
        <item name="android:colorAccent">#FFEC3E3E</item>
        <item name="android:textColorSecondary">#FFEC3E3E</item>
        <item name="android:buttonStyle">@style/ButtonColorFireRed</item>

        <item name="selectedColor">#EC3E3F</item>
        <item name="unselectedColor">#1AEC3E3F</item>

        <item name="callButtonBackgroundColor">#FFEC3E3E</item>

        <!-- main activity tabs (contacts/calls) -->
        <item name="tabColor">#1AEC3E3F</item>
        <item name="tabTextColor">#FFEC3E3E</item>
        <item name="tabSelectedColor">#EC3E3F</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTheme.GrassGreen" parent="AppThemeBase">
        <item name="android:colorPrimary">#8BC34A</item>
        <item name="android:colorPrimaryDark">#3C983F</item>
        <item name="android:colorAccent">#8BC34A</item>
        <item name="android:textColorSecondary">#3C983F</item>
        <item name="android:buttonStyle">@style/ButtonColorGrassGreen</item>

        <item name="selectedColor">#8BC34A</item>
        <item name="unselectedColor">#3C983F</item>

        <item name="callButtonBackgroundColor">#4C9C4E</item>

        <!-- main activity tabs (contacts/calls) -->
        <item name="tabColor">#D5FFA7</item>
        <item name="tabTextColor">#3C983F</item>
        <item name="tabSelectedColor">#8BC34A</item>
        <item name="tabSelectedTextColor">#202D11</item>
    </style>

    <style name="AppTheme.SkyBlue" parent="AppThemeBase">
        <item name="android:colorPrimary">#1C5DCC</item>
        <item name="android:colorPrimaryDark">#1C6FB7</item>
        <item name="android:colorAccent">#184DA8</item>
        <item name="android:textColorSecondary">#1C6FB7</item>
        <item name="android:buttonStyle">@style/ButtonColorSkyBlue</item>

        <item name="selectedColor">#1C5DCC</item>
        <item name="unselectedColor">#1C6FB7</item>

        <item name="callButtonBackgroundColor">#71B2EB</item>

        <!-- main activity tabs (contacts/calls) -->
        <item name="tabColor">#1C6FB7</item>
        <item name="tabTextColor">@color/lighter_grey</item>
        <item name="tabSelectedColor">#1C5DCC</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTheme.NightGrey" parent="AppThemeBase">
        <item name="android:colorPrimary">@color/dark_grey</item>
        <item name="android:colorPrimaryDark">@color/darker_grey</item>
        <item name="android:colorAccent">@color/dark_grey</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
        <item name="android:buttonStyle">@style/ButtonColorNightGrey</item>

        <item name="selectedColor">@color/light_grey</item>
        <item name="unselectedColor">@color/dark_grey</item>

        <item name="callButtonBackgroundColor">@color/light_grey</item>

        <!-- main activity tabs (contacts/calls) -->
        <item name="tabColor">@color/light_grey</item>
        <item name="tabTextColor">@color/dark_grey</item>
        <item name="tabSelectedColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Nothing to do for now -->
    </style>
</resources>
